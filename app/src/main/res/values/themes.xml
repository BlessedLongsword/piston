<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Piston" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="android:colorBackground">@color/light_grey</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/black</item>
    </style>
    
    <style name="Theme.Piston.Global">
        <item name="colorPrimary">@color/global_primary</item>
        <item name="colorPrimaryVariant">@color/global_primary_variant</item>
        <item name="colorSecondary">@color/global_secondary</item>
        <item name="colorSecondaryVariant">@color/global_secondary_variant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/global_primary_variant</item>
    </style>

    <style name="Theme.Piston.Groups">
        <item name="colorPrimary">@color/groups_primary</item>
        <item name="colorPrimaryVariant">@color/groups_primary_variant</item>
        <item name="colorSecondary">@color/groups_secondary</item>
        <item name="colorSecondaryVariant">@color/groups_secondary_variant</item>.
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/groups_primary_variant</item>
    </style>

    <style name="Theme.Piston.Personal">
        <item name="colorPrimary">@color/personal_primary</item>
        <item name="colorPrimaryVariant">@color/personal_primary_variant</item>
        <item name="colorSecondary">@color/personal_secondary</item>
        <item name="colorSecondaryVariant">@color/personal_secondary_variant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/personal_primary_variant</item>
    </style>

    <style name="Theme.Piston.ToolbarStyle">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Piston.SplashScreen" parent="Theme.Piston">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Text Fields with no outline and no fill -->
    <style name="BlankBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="EditTextButton">
        <item name="android:src">@drawable/baseline_edit_black_24</item>
        <item name="android:tint">?attr/colorOnBackground</item>
    </style>

    <style name="GroupModeratorIcon">
        <item name="android:src">@drawable/outline_construction_black_24</item>
        <item name="android:tint">?attr/colorOnBackground</item>
    </style>

    <style name="GroupOwnerIcon">
        <item name="android:src">@drawable/outline_local_police_black_24</item>
        <item name="android:tint">?attr/colorOnBackground</item>
    </style>

    <style name="ClipBoard">
        <item name="android:src">@drawable/baseline_content_copy_black_24</item>
        <item name="android:tint">?attr/colorOnBackground</item>
    </style>

    <style name="Pin">
        <item name="android:src">@drawable/outline_push_pin_black_18</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="FilterButton">
        <item name="android:src">@drawable/outline_filter_alt_black_24</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="OrderButtonDown">
        <item name="android:src">@drawable/outline_arrow_downward_black_24</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="OrderButtonUp">
        <item name="android:src">@drawable/outline_arrow_upward_black_24</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

</resources>