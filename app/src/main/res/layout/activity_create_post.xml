<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.piston.main.posts.createPost.CreatePostViewModel" />
        <variable
            name="constants"
            type="com.example.piston.data.constants.Integers" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.posts.createPost.CreatePostActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/create_post_topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/create_post_activity_title"
                app:navigationIcon="@drawable/outline_close_white_24"
                app:menu="@menu/create_post_top_app_bar"
                style="@style/Theme.Piston.ToolbarStyle"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:weightSum="0.5">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/choose_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:counter="@{constants.MAX_TITLE_LENGTH}"
                    android:postTitleError="@{viewModel.titleFieldError}"
                    app:errorEnabled="true" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textShortMessage"
                        android:afterTextChanged="@{() -> viewModel.titleUpdate()}"
                        android:text="@={viewModel.titleField}"
                        android:maxLength="@integer/title_max_length" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/choose_picture_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/choose_picture"
                        android:onClick="imagePick"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/post_picture"
                        android:layout_width="@dimen/big_square"
                        android:layout_height="@dimen/big_square"

                        android:contentDescription="@string/post_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_attach_file"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:text="@string/attach_file" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/file_path"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:hint="@string/file_path"
                        android:inputType="textPersonName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_text_field_post"
                    android:hint="@string/post_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    app:placeholderText="@string/hint_post_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="@integer/post_max_length" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLength="@integer/post_max_length"
                        android:maxLines="10"
                        android:inputType="textMultiLine"
                        android:text="@={viewModel.contentField}" />

                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>