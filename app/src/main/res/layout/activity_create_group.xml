<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/createGroup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_group_title"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginVertical="@dimen/activity_vertical_margin"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_group_name"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textShortMessage" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_group_desc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="@string/create_folder_description"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/description_max_length"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName|textImeMultiLine"
            android:gravity="start"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/group_link"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_group_zelda"
        android:layout_marginTop="@dimen/textfield_separator"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_content_copy_black_24"
        app:helperText="@string/group_link_help"
        app:helperTextEnabled="true">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:editable="false"
        android:text="Tonto el que lo lea xd"
        android:gravity="start" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/create_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="createCategory"
        android:text="@string/create_group_btn"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>


