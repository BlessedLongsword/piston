<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="false"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/outline_send_black_24"
        app:boxStrokeColor="@color/transparent"
        app:placeholderText="@string/write_your_message" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:paddingStart="@dimen/tiny_separator"
            android:paddingEnd="@dimen/tiny_separator"
            android:paddingVertical="@dimen/tiny_separator"
            android:maxLength="@integer/max_reply_length"
            android:gravity="start" />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>