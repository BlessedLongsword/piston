<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="category"
            type="com.example.piston.data.Category" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/category_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:checkable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="@dimen/bigger_square"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_description_media"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bigger_square"
                android:orientation="vertical"
                android:padding="@dimen/small_separator">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{category.title}"
                    tools:text="@string/title"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/category_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_separator"
                    android:maxLines="@integer/max_desc_lines"
                    android:ellipsize="end"
                    android:text="@{category.description}"
                    tools:text="@string/description"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_separator"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9.9" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/card_margin"
                        android:layout_weight="0.1"
                        android:background="@null"
                        android:visibility="invisible"
                        android:contentDescription="@string/content_description_media"
                        android:src="@drawable/outline_star_border_black_36" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>