<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Piston" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>

        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorError">@color/light_red</item>

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>

        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Piston.Global">
        <item name="colorPrimary">@color/global_primary_dark</item>
        <item name="colorPrimaryVariant">@color/global_primary_variant_dark</item>
        <item name="colorSecondary">@color/global_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/global_secondary_variant_dark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Piston.Groups">
        <item name="colorPrimary">@color/groups_primary_dark</item>
        <item name="colorPrimaryVariant">@color/groups_primary_variant_dark</item>
        <item name="colorSecondary">@color/groups_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/groups_secondary_variant_dark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Piston.Personal">
        <item name="colorPrimary">@color/personal_primary_dark</item>
        <item name="colorPrimaryVariant">@color/personal_primary_variant_dark</item>
        <item name="colorSecondary">@color/personal_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/personal_secondary_variant_dark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Piston.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Surface</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

</resources>